%li#database_list
  =link_to "#{database.values[0].to_s}", database_tables_path(database_id: database.values[0].to_s), title: "Show database tables", remote: true
  =link_to(image_tag('delete.png', alt: "DROP DATABASE"), database_path(id: database.values[0].to_s), method: :delete, data: {confirm: 'Are you sure to delete database: ' + database.values[0].to_s + '?'}, class: 'delete', remote: true, title: "Drop database")