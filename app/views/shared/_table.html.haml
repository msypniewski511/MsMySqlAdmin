%tr
  %td
    /= link_to "#{table.values[0].to_s}", database_table_path(id: table.values[0].to_s})
    /= link_to("Delete", database_table_path(id: "#{table.values[0].to_s}"))
    =link_to("#{table.values[0].to_s}", database_table_columns_path(table_id: "#{table.values[0].to_s}"), remote: true, title: "Show description of table")
  %td
    =link_to(image_tag('stock-eye-20.png'), show_records_database_table_path(id: "#{table.values[0].to_s}"), remote: true, title: "Shoe records in table")
    =link_to(image_tag('stock-edit-16'), edit_database_table_path(id: "#{table.values[0].to_s}"), remote: true, title: "Rename table")
    =link_to(image_tag('delete.png'), database_table_path(id: "#{table.values[0].to_s}"), method: :delete, data: {confirm: "Are you sure to drop table: #{table.values[0].to_s} ?"}, remote: true, title: "Delete table")

    
